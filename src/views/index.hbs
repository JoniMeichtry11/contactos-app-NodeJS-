<div class="col-md-6 offset-md-3">
    <div class="card">
        <div class="card-header">
            Revisitas
        </div>
        <div class="card-body">
            {{#if revisitas}}
                <ul class="list-group">
                    {{#each revisitas}}
                        <li class="list-group-item d-flex justify-content-between align-item-center">
                            {{nombre}} /
                            {{numero}} /
                            {{comentario}}
                            <a href="/delete-revisita/{{@key}}" class="btn btn-danger">BORRAR</a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No hay Contactos:(</p>
            {{/if}}
        </div>
        <div class="card-footer">
            <form action="/new-rev" method="POST">
                <div class="form-group">
                    <input type="text" name="firstname" placeholder="Nombre" class="form-control" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" name="phone" placeholder="TelÃ©fono" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="comentario" placeholder="Comentario" class="form-control">
                </div>
                <button class="btn btn-success btn-block">
                    Guardar
                </button>
            </form>
        </div>
    </div>
</div>